  <HediffDef ParentName="AddictionBase">
    <defName>RFSStaminaPotionAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>stamina potion addiction</label>
	<description>The pawn has developed a crippling dependency on stamina potions -- they'll move and act slower, and their stamina regeneration and maximum stamina are reduced while not under the effects of a stamina potion.</description>
    <causesNeed>RFSChemical_StaminaPotion</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.14</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <painFactor>8</painFactor>
        <restFallFactor>1.5</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <mentalStateGivers>
					<li>
						<mentalState>Binging_DrugExtreme</mentalState>
						<mtbDays>2</mtbDays>
					</li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>3</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>RFSStaminaPotionWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RFSStaminaPotionAddiction</hediff>
